@model AidImpactExercise.Models.Point
@{
    ViewData["Title"] = "Create page";
}

<section class="cta-section theme-bg-light py-5">
    <div class="container text-center single-col-max-width">
        <h2 class="heading">Create a new point</h2>
        <div class="intro">
            <p>Fill the blanks below to create your custom point</p>
        </div>

    </div><!--//container-->

    <div class="container w-50">
        <fieldset>
            <form asp-action="Create" asp-controller="Point">
                <div asp-validation-summary="ModelOnly"></div>
                <p>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter the city name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </p>
                <p>
                    <label asp-for="Longitude"></label>
                    <input type="number" asp-for="Longitude" class="form-control" placeholder="Enter the Longitude" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </p>
                <p>
                    <label asp-for="Latitude"></label>
                    <input type="number" asp-for="Latitude" class="form-control" placeholder="Enter the latitude" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </p>
                <p>
                    <button type="submit" class="btn btn-primary mt-3">Create the point</button>
                </p>
            </form>
        </fieldset>
    </div>
</section>